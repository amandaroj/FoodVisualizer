<div class = "main_container">
  <h1>The menus of <%=@restaurant.name%></h1>

  <div class="menu-cards">
    <% @menus.each do |menu|%>
      <div class="card menu-card p-3">
        <div class="card-body">
          <h3><%= menu.name %></h3>
          <p><%= menu.category %></p>
          <%=link_to "See menu", restaurant_menu_path(@restaurant.id, menu.id), class: "main_button" %>
        </div>
        <div class = "trashcan-div-menus">
          <%=link_to edit_restaurant_menu_path(@restaurant.id, menu.id) do %>
            <i class="fa-solid fa-pen-to-square edit"></i>
          <%end%>
          <%=link_to restaurant_menu_path(@restaurant.id, menu.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "delete-btn" do%>
            <i class="fa-solid fa-trash"></i>
          <% end %>
        </div>
      </div>
    <% end%>
  </div>
  <%= link_to "Add menu", new_restaurant_menu_path(@restaurant.id), class: "main_button add-menu-btn" %>
</div>
