<div class="container">
  <br>
  <%= link_to :back, class: "arrow-back-btn mb-3 back-btn-color text-decoration-none" do %>
        <i class="fa-solid fa-arrow-left-long"></i>
      <% end %>
  <h1 class = "text-center">Edit your restaurant</h1>
    <div class="mx-auto" style="width: 500px;">
      <%= simple_form_for [@restaurant] do |f| %>
      <%= f.input :name, input_html: { class: "form-radius" } %>
      <%= f.input :owner, input_html: { class: "form-radius" } %>
      <%= f.input :location, input_html: { class: "form-radius" } %>
      <div class="text-center mt-4">
        <%= f.submit "Update restaurant", class: "main-button" %>
      </div>
      <% end %>
    </div>
</div>
