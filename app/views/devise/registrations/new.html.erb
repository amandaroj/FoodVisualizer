<div class="container">
  <div class="header-text">
    <h2>Sign up</h2>
  </div>
    <div class ="form-text">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
        data: {turbo: false}) do |f| %>
        <%= f.error_notification %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-radius" } %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "form-radius" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "form-radius"} %>
      </div>

    </div>
    <div class="form-actions">
      <%= f.button :submit, "Sign up", class: "btn btn-outline-secondary btn-margin" %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
