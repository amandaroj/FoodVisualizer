<div class="container">
<br>
  <div class ="form-text">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: {turbo: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-radius"}%>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-radius"}%>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable?%>
      </div>


    <div class="form-actions">
      <%= f.submit "Log in", class: "main-button"%>
    </div>
    <div class = "form-links">
      <%= render "devise/shared/links" %>
    </div>
    <% end %>
  </div>
</div>
