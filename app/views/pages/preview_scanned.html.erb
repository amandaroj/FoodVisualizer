<%# restaurant's show page %>
<div class = "main_container">
  <h1 class="mb-4">The Menus of <%=@restaurant.name%> (Preview)</h1>
  <div class="menu-cards mb-5">
    <% @menus.each do |menu|%>
      <div class = "d-flex card p-3 rounded-4 shadow">
        <div>
          <h3><%=menu.name.capitalize%></h3>
          <span class="badge rounded-pill fs-6 category-pill mb-2">
            <%= menu.category.capitalize %>
          </span>
        </div>
        <div>
          <p class= "mt-4 mr-5 mb-0"><%= menu.description %></p>
        </div>
        <div class="class mt-4 mb-2">
          <%=link_to "See menu", preview_dishes_path(menu_id: menu.id), class: "main-button" %>
        </div>
      </div>
    <% end%>
  </div>
</div>
