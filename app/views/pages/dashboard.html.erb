<h1>Dashboard</h1>

<div class = "your-restaurants">
  <h2>Your restaurants</h2>
  <% @restaurants.each do |restaurant|%>
    <div class = "card">
      <h3><%=restaurant.name%></h3>
      <p><%=restaurant.owner%></p>
      <p><%=restaurant.location%></p>
      <div class = "restaurant-menus">
        <%=link_to "Menus", restaurant_path(restaurant.id), class: "btn btn-secondary"%>
      </div>
    </div>
  <% end%>
  <%=link_to "Edit your restaurants", restaurants_path, class: "btn btn-secondary"%>
</div>


